---
import { cards_skills } from "../data/info"
import CardSkill from "./CardSkill.astro"
---

<section class="flex flex-col gap-3 py-[15px] mx-auto desktop:w-[90%]" id="skills">
    <h2 class="subtitle mb-10 mt-20">Mis Habilidades</h2>
    <div class="flex flex-wrap justify-center items-center gap-10 mt-6">
      {cards_skills.map((card) => (
        <CardSkill name={card.name}/>
      ))}
    </div>
  </section>